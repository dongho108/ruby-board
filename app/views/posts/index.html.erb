<h1>게시판</h1>

<div class="posts">
  <% if @posts.any? %>
    <table>
      <thead>
        <tr>
          <th>제목</th>
          <th>작성자</th>
          <th>작성일</th>
          <th>액션</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.title, post_path(post) %></td>
            <td><%= post.author %></td>
            <td><%= post.created_at.strftime('%Y-%m-%d %H:%M') %></td>
            <td>
              <%= link_to '수정', edit_post_path(post) %> |
              <%= link_to '삭제', post_path(post), 
                    data: { turbo_method: :delete, turbo_confirm: '정말 삭제하시겠습니까?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>아직 게시글이 없습니다.</p>
  <% end %>
</div>

<%= link_to '새 게시글 작성', new_post_path, class: 'button' %>
